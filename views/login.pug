
extends index

block content
        if errors
          div(class='error_holder')
            ul.error_list
                each err in errors
                    li=err
        div
          div.form_container
            form(action="/users/login" method="post" class= "signup")
              input(type="hidden" name="_csrf" value=csrfToken)
              div
              label(for="email") Email
              input(type="email" name="email" class="signup_input" required)
              div
              label(for="password") Password
              input(type="password" name="password" class="signup_input" required)
              div
              button(type="submit" class="signup_btn") Login 
          div.form_container
            p Don't have an account?
             a(href="/users/new") Sign  up
          div.demo_button
            form(action="/users/login/demo" method="post" )
              input(type="hidden" name="_csrf" value=csrfToken)
              button(type= "submit" class= "demo_submit_btn") Demo User Login
